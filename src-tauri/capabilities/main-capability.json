{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window with dialog access",
  "windows": [
    "main"
  ],
  "remote": {
    "urls": [
      "http://localhost:*/*"
    ]
  },
  "platforms": [
    "linux",
    "macOS",
    "windows"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:allow-open"
  ]
}