{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "youtube-to-mp3",
  "version": "0.1.0",
  "identifier": "com.dineshgamage.youtube-to-mp3",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "YouTube to MP3",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "main-capability"
      ]
    }
  },
  "plugins": {
    "dialog": null,
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "yt-dlp",
          "cmd": "yt-dlp",
          "args": true
        },
        {
          "name": "ffmpeg",
          "cmd": "ffmpeg",
          "args": true
        }
      ]
    },
    "opener": {
      "requireLiteralLeadingDot": false
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "dmg",
      "msi",
      "nsis",
      "deb",
      "appimage"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "hardenedRuntime": true,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "en-US"
      }
    },
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "binaries/yt-dlp*",
      "binaries/ffmpeg*"
    ]
  }
}